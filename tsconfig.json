{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",                                     
    "module": "ESNext",                                
    "moduleResolution": "node",                          
    "outDir": "dist",         
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "plugins": [
      { "transform": "ts-transformer-keys/transformer" }
    ],
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
