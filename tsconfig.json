{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",                                     
    "module": "ESNext",                                
    "moduleResolution": "node",                          
    "outDir": "dist",         
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": [
    "build.config.ts",
    "dist"
  ]
}
